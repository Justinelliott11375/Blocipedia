<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <main class="container">
            <% include ../static/partials/messages.ejs %>
            
            <h1>Edit Wiki</h1>

            <form action="/wikis/<%= wiki.id %>/collaborators" method="post">
                <a href="/wikis/<%= wiki.id %>/collaborators" class="btn btn-success">Add/Edit Collaborators</a>
                </form>
      

            <form action="/wikis/<%= wiki.id %>/update" method="post">
                <div class="form-group">
                    <label for="title">Wiki title</label>
                    <input value="<%= wiki.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Wiki Title">
                </div>
                <div class="form-group">
                    <label for="body">Body</label>
                    <textarea rows="4" class="form-control" name="body" placeholder="Enter Wiki Body"><%= wiki.body %></textarea>
                </div>
                <% if(currentUser.role === "admin" || currentUser.role === "premium") { %>
                    <p>Change Publice/Private?</p>
                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-secondary">
                            <input type="radio" name="private" value=false autocomplete="on" checked> Public
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" name="private" value=true autocomplete="off"> Private
                        </label>
                    </div>
                    <% } %>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

        </main>
    </body>
</html>